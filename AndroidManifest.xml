<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.conect4"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity
            android:name=".Principal"
            android:label="@string/t_home" >
            <intent-filter>
                <action android:name="android.intent.action.PRINCIPAL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        	<activity
            android:name=".Jugar"
            android:label="@string/t_jugar" >
            <intent-filter>
                <action android:name="android.intent.action.JUGAR" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         
        <activity
            android:name=".Championship"
            android:label="@string/t_champions" >
            <intent-filter>
                <action android:name="android.intent.action.CHAMPIONSHIP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".Settings"
            android:label="@string/t_settings" >
            <intent-filter>
                <action android:name="android.intent.action.SETTINGS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".About"
            android:label="@string/t_about" >
            <intent-filter>
                <action android:name="android.intent.action.ABOUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".NuevoJugador"
            android:label="@string/t_nuevo" >
            <intent-filter>
                <action android:name="android.intent.action.NUEVOJUGADOR" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
