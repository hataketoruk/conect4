<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_lista"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0479AE"
>

    <ListView
        android:id="@+id/lista_jugadores"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        
        android:layout_below="@+id/button1"
        android:layout_marginTop="24dp" >

    </ListView>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/fondo_inverso" />

    <Button
        android:id="@+id/button1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="#64b5f6"
        android:drawableLeft="@drawable/nuevo"
        android:onClick="NuevoJugador"
        android:text="@string/nuevo_jugador"
        android:textColor="#ffffff" />

</RelativeLayout>